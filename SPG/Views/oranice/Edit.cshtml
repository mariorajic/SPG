@model SPG.oranice

@{
    ViewBag.Title = "Edit";
}

<h2>Uredi oranicu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.id_parcele, "Parcela", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_parcele", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_parcele, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.naziv, htmlAttributes: new { @class = "control-label col-md-2 text-capitalize" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.naziv, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.naziv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dimenzije, htmlAttributes: new { @class = "control-label col-md-2 text-capitalize" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dimenzije, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dimenzije, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.stanje_tla, "Stanje tla", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("stanje_tla", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.stanje_tla, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.vrsta_tla, "Vrsta tla", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("vrsta_tla", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.vrsta_tla, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

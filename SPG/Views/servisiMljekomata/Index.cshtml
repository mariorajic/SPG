@model IEnumerable<SPG.servisi_mljekomata>

@{
    ViewBag.Title = "Servisi";
}

<h2>Servisi mljekomata</h2>

<p>
    @Html.ActionLink("Novi servis", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Datum
        </th>
        <th>
            Troškovi
        </th>
        <th>
            Lokacija
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.datum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.troskovi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mljekomati.lokacija)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.id }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

@model SPG.gospodarstva

@{
    /**/
    ViewBag.Title = "Create";
}

<div class="row flex-center">
    <div class="col-12 col-lg-6 row flex-center flex-column">

        <img src="~/Content/img/logo.png" alt="Sustav za poljoprivredna gospodarstva">
        @if (ViewBag.Message != null)
    {
        <h6 class="font-italic">@ViewBag.Message</h6>
}
        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "pi-form my-4 col-10 col-lg-6" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group row my-3">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <label class="col-2 flex-center"><i class="fa fa-user"></i></label>
            @Html.EditorFor(model => model.ime, new { htmlAttributes = new { placeholder = "Unesite ime", @class = "form-control col-10" } })
            @Html.ValidationMessageFor(model => model.ime, "", new { @class = "text-danger" })
        </div>

        <div class="form-group row my-3">
            <label class="col-2 flex-center"><i class="fa fa-user"></i></label>
            @Html.EditorFor(model => model.prezime, new { htmlAttributes = new { placeholder = "Unesite prezime", @class = "form-control col-10" } })
            @Html.ValidationMessageFor(model => model.prezime, "", new { @class = "text-danger" })
        </div>

        <div class="form-group row my-3">
            <label class="col-2 flex-center"><i class="fa fa-envelope"></i></label>
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { placeholder = "Unesite email", @class = "form-control col-10" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group row my-3">
            <label class="col-2 flex-center"><i class="fa fa-phone"></i></label>
            @Html.EditorFor(model => model.kontakt, new { htmlAttributes = new { placeholder = "Unesite broj telefona", @class = "form-control col-10" } })
            @Html.ValidationMessageFor(model => model.kontakt, "", new { @class = "text-danger" })
        </div>

        <div class="form-group row my-3">
            <label class="col-2 flex-center"><i class="fa fa-lock"></i></label>
            @Html.EditorFor(model => model.lozinka, new { htmlAttributes = new { placeholder = "Unesite lozinku", @class = "form-control col-10" } })
            @Html.ValidationMessageFor(model => model.lozinka, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="my-3">
            Registracija
        </button>
        <div class="form-links d-flex justify-content-between my-3">
            <a href="@Url.Action("Index", null, new { area = string.Empty, controller = "Home" }, Request.Url.Scheme)">
                <span>Prijava</span>
            </a>
            <a href="#">Pomoć</a>
        </div>
}
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

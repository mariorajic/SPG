@model SPG.prodaje_sirovina

@{
    ViewBag.Title = "Details";
}

<h2>Detalji sirovine</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sirovine.naziv)
        </dd>

        <dt>
            Količina
        </dt>

        <dd>
            @Html.DisplayFor(model => model.kolicina)
        </dd>

        <dt>
            Datum
        </dt>

        <dd>
            @Html.DisplayFor(model => model.datum)
        </dd>

        <dt>
            Profit
        </dt>

        <dd>
            @Html.DisplayFor(model => model.profit)
        </dd>

    </dl>
</div>
<p>
    <button type="button" class="btn btn-basic">@Html.ActionLink("Ispiši u PDF-u", "PrintToPdf", new { id = Model.id })</button>
</p>

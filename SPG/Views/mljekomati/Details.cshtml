@model SPG.mljekomati

@{

ViewBag.Title = "Detalji";
IEnumerable<servisi_mljekomata> servisi = ViewData["Servisi"] as IEnumerable<servisi_mljekomata>;
IEnumerable<punjenje_mljekomata> punjenja = ViewData["Punjenja"] as IEnumerable<punjenje_mljekomata>;

}

<h2>Detalji</h2>

<div class="row">
    <div class="d-flex flex-column col-4 justify-content-start>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Lokacija
            </dt>

            <dd>
                @Html.DisplayFor(model => model.lokacija)
            </dd>

            <dt>
                Kapacitet
            </dt>

            <dd>
                @Html.DisplayFor(model => model.kapacitet)
            </dd>

        </dl>

        <hr />
        <p class="mt-4">
            @Html.ActionLink("Uredi mljekomat", "Edit", new { id = Model.id }) |
            @Html.ActionLink("Natrag na listu", "Index")
        </p>

    </div>

    <div class="d-flex flex-column col-8">
        <div>
            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="pills-punjenja-tab" data-toggle="pill" href="#pills-punjenja" role="tab" aria-controls="pills-home" aria-selected="true">Punjenja</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-servisi-tab" data-toggle="pill" href="#pills-servisi" role="tab" aria-controls="pills-profile" aria-selected="false">Servisi</a>
                </li>
            </ul>
        </div>

        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-punjenja" role="tabpanel" aria-labelledby="pills-punjenja-tab">
                <button type="button" class="btn btn-basic">@Html.ActionLink("Novo punjenje", "Create", "punjenjeMljekomata", new { id = Model.id }, null)</button>
                <table class="table">
                    <tr>
                        <th>
                            Datum
                        </th>
                        <th>
                            Troškovi
                        </th>
                        <th>
                            Profit
                        </th>
                        <th>
                            Preostala količina
                        </th>
                        <th>
                            Akcije
                        </th>
                    </tr>
                    @foreach (var item in punjenja)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.datum)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.troskovi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.profit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.preostala_kolicina)
                            </td>
                            <td>
                                @Html.ActionLink("Uredi", "Edit", new { controller = "punjenjeMljekomata", id = item.id }) |
                                @Html.ActionLink("Detalji", "Details", new { controller = "punjenjeMljekomata", id = item.id }) |
                                @Html.ActionLink("Izbrisi", "Delete", new { controller = "punjenjeMljekomata", id = item.id })
                            </td>
                        </tr>
                    }
                </table>
            </div>

            <div class="tab-pane fade show" id="pills-servisi" role="tabpanel" aria-labelledby="pills-servisi-tab">
                <button type="button" class="btn btn-basic">@Html.ActionLink("Novi servis", "Create", "servisiMljekomata", new { id = Model.id}, null)</button>
                <table class="table">
                    <tr>
                        <th>
                            Datum
                        </th>
                        <th>
                            Troškovi
                        </th>
                        <th>
                            Akcije
                        </th>
                    </tr>
                    @foreach (var item in servisi)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.datum)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.troskovi)
                            </td>
                            <td>
                                @Html.ActionLink("Uredi", "Edit", new { controller="servisiMljekomata", id = item.id }) |
                                @Html.ActionLink("Detalji", "Details", new { controller = "servisiMljekomata", id = item.id }) |
                                @Html.ActionLink("Izbrisi", "Delete", new { controller = "servisiMljekomata", id = item.id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

        </div>
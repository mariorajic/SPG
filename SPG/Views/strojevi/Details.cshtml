@model SPG.strojevi

@{

ViewBag.Title = "Details";
IEnumerable<radnje_stroja> radnje = ViewData["Radnje"] as IEnumerable<radnje_stroja>;
}

<h2>Detalji o stroju</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv
        </dt>

        <dd>
            @Html.DisplayFor(model => model.naziv)
        </dd>

        <dt>
            Datum kupovine
        </dt>

        <dd>
            @Html.DisplayFor(model => model.datum_kupovine)
        </dd>

        <dt>
            Trošak
        </dt>

        <dd>
            @Html.DisplayFor(model => model.trosak)
        </dd>

        <dt>
            Vrijednost
        </dt>

        <dd>
            @Html.DisplayFor(model => model.vrijednost)
        </dd>

        <dt>
            Parcela
        </dt>

        <dd>
            @Html.DisplayFor(model => model.parcele.naziv)
        </dd>

    </dl>
</div>

<h2 class="mb-5">Detalji radnja stroja</h2>

@foreach (var item in radnje)
{
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Naziv
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.naziv)
            </dd>

            <dt>
                Datum
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.datum)
            </dd>

            <dt>
               Trošak
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.trosak)
            </dd>

            <dt>
                Profit
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.profit)
            </dd>

            <dt>
                Stroj
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.strojevi.naziv)
            </dd>

            <dt>
               Tip radnje stroja
            </dt>

            <dd>
                @Html.DisplayFor(modelItem => item.tip_radnje_stroja1.naziv)
            </dd>
            <dd>
                @Html.ActionLink("Uredi", "Edit", "radnjeStroja", new { id = item.id }, null) |
                @Html.ActionLink("Detalji", "Details", "radnjeStroja", new { id = item.id }, null) |
                @Html.ActionLink("Izbriši", "Delete", "radnjeStroja", new { id = item.id }, null)
            </dd>
        </dl>
    </div>
}
<hr />
<p class="mt-4">
    @Html.ActionLink("Uredi stroj", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Nazad na listu", "Index")
</p>

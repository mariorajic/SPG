@model IEnumerable<SPG.punjenje_mljekomata>

@{
    ViewBag.Title = "Punjenje";
}

<h2>Punjenja mljekomata</h2>

<p>
    @Html.ActionLink("Novo punjenje", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Datum
        </th>
        <th>
            Troškovi
        </th>
        <th>
            Profit
        </th>
        <th>
            Preostala količina
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.datum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.troskovi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.profit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.preostala_kolicina)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.id }) |
            @Html.ActionLink("Izbriši", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

@model SPG.punjenje_mljekomata

@{
    ViewBag.Title = "Uredi";
}

<h2>Uredi punjenje</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.id_mljekomata, "id_mljekomata", htmlAttributes: new { @class = "control-label col-md-2" })
